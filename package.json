{
  "name": "pixo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "A pixel art editor built with Electron",
  "author": "Whisperer",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "tsc -p electron/main.tsconfig.json && tsc -p electron/preload.tsconfig.json && electron .",
    "electron:compile": "tsc -p electron/main.tsconfig.json && tsc -p electron/preload.tsconfig.json",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1"
  },
  "build": {
    "appId": "com.pixo.app",
    "productName": "Pixo",
    "icon": "icon.png",
    "asar": true,
    "files": [
      "dist/**",
      "dist-electron/**",
      "electron/**",
      "package.json",
      "icon.png"
    ],
    "directories": {
      "buildResources": "build"
    },
    "fileAssociations": [
      {
        "ext": "pixo",
        "name": "Pixo Project",
        "role": "Editor",
        "description": "Pixo project file"
      },
      {
        "ext": "pix",
        "name": "Pixo Project (legacy)",
        "role": "Editor",
        "description": "Pixo project file"
      },
      {
        "ext": "png",
        "name": "PNG Image",
        "role": "Editor",
        "description": "PNG image"
      }
    ]
  }
}
